<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MortgageActivity">

    <TextView
        android:id="@+id/loanPayments"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="64dp"
        android:text="Potential loan payments"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanInterestRate" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="64dp"
        android:text="Mortgage  Advice"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/loanSavingsHoldings"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:text="Savings holdings:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/loanPaymentWeekly"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Weekly:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanPayments" />

    <TextView
        android:id="@+id/loanPaymentBiweekly"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Bi-weekly:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanPaymentWeekly" />

    <TextView
        android:id="@+id/loanPaymentMonthly"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Monthly:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanPaymentBiweekly" />

    <TextView
        android:id="@+id/loanMoneyDown"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Money down (principal):"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanSavingsHoldings" />

    <TextView
        android:id="@+id/loanInterestRate"
        android:layout_width="350dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Fixed rate mortgage 8% over 25 years"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanMoneyDown" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="amount ($)"
        android:inputType="number|textPersonName|textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/loanMoneyDown"
        app:layout_constraintEnd_toEndOf="@+id/loanMoneyDown" />

    <TextView
        android:id="@+id/financialAdvisor4"
        android:layout_width="321dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanPaymentMonthly" />

</android.support.constraint.ConstraintLayout>
